{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "types": ["node", "chrome"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "#addons": ["./esbuild/virtuals/addons.d.ts"],
      "#addon-scripts": ["./esbuild/virtuals/addon-scripts.d.ts"],
      "#addon-styles": ["./esbuild/virtuals/addon-styles.d.ts"],
      "#addon-popups": ["./esbuild/virtuals/addon-popups.d.ts"],
      "#addon-en": ["./esbuild/virtuals/addon-en.d.ts"],
      "#addon-l10n": ["./esbuild/virtuals/addon-l10n.d.ts"],
    },
  },
}
